{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@/types/*": ["@types/*"],
      "@graphql/*": ["lib/graphql/*"],
      "@mutations/*": ["lib/graphql/mutations/*"],
      "@queries/*": ["lib/graphql/queries/*"],
      "@components/*": ["components/*"],
      "@hooks/*": ["lib/hooks/*"],
      "@hocs/*": ["lib/hocs/*"],
      "@utils/*": ["lib/utils/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.graphql",
    "**/*.gql",
    "**/*.json",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
